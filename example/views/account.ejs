<!-- src/views/account.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>Account - Passport WebAuthn2</title>
</head>
<body>
<h1>Account</h1>
<p>Username: <%= user.username %></p>
<h2>Registered Passkeys</h2>
<ul>
    <% user.passkeys.forEach(passkey => { %>
        <li>
            <strong>Credential ID:</strong> <%= passkey.id %><br/>
            <strong>Device Type:</strong> <%= passkey.deviceType %><br/>
            <strong>Transports:</strong> <%= passkey.transports.join(', ') %><br/>
            <strong>Backed Up:</strong> <%= passkey.backedUp ? 'Yes' : 'No' %><br/>
            <strong>Counter:</strong> <%= passkey.counter %>
        </li>
    <% }) %>
</ul>
<a href="/">Home</a>
<form action="/logout" method="POST">
    <button type="submit">Logout</button>
</form>
</body>
</html>