<!DOCTYPE html>
<html>
<head>
    <title>Register - Passport WebAuthn2</title>
    <script src="https://cdn.jsdelivr.net/npm/@simplewebauthn/browser@latest/dist/simplewebauthn-browser.min.js"></script>
</head>
<body>
<h1>Register</h1>
<form id="register-form">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required />
    <button type="submit">Register</button>
</form>

<script>
    const form = document.getElementById('register-form');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const username = document.getElementById('username').value;

        try {
            // Step 1: Request registration options from the server
            const optionsResp = await fetch('/register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username }),
            });

            if (!optionsResp.ok) {
                const error = await optionsResp.json();
                alert(error.error);
                return;
            }

            const options = await optionsResp.json();

            // Step 2: Start registration ceremony
            const attResp = await SimpleWebAuthnBrowser.startRegistration(options);

            // Step 3: Send attestation response to the server for verification
            const verificationResp = await fetch('/register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ response: attResp, username }),
            });

            if (verificationResp.ok) {
                window.location.href = '/account';
            } else {
                const error = await verificationResp.json();
                alert(error.error);
            }
        } catch (error) {
            console.error(error);
            alert('Registration failed');
        }
    });
</script>
</body>
</html>